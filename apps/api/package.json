{
  "name": "@horizon/api",
  "version": "1.0.0",
  "description": "Horizon API Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/shared": "workspace:*",
    "@c2n-launchpad/shared": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^2.0.12",
    "jest": "^30.0.5",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0"
  },
  "keywords": [
    "api",
    "express",
    "typescript",
    "horizon"
  ],
  "author": "Horizon Team",
  "license": "MIT"
}
